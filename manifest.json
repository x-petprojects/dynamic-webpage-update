{
  "manifest_version": 3,
  "name": "DWU",
  "version": "0.1",
  "description": "dynamic-webpage-update",
  "permissions": ["storage", "tabs", "scripting", "activeTab", "webNavigation", "tabCapture"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "hello_extensions.png"
  }
}
